<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:background="#FFEEEEEE">

    <LinearLayout
        android:id="@+id/linearLayout_row_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtVrijemeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_row_sent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/contactImageSent"
        android:layout_toLeftOf="@+id/contactImageSent"
        android:background="@drawable/bubble_desno"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtPorukaSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#87000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtMinuteSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#87000000"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/contactImageSent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/chatSent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/contact_photo"
        android:src="@drawable/ic_action_person_pin" />

</RelativeLayout>